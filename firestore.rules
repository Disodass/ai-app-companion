rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Newsletter signups - anyone can create, only admins can read
    match /newsletter/{email} {
      allow create: if true;  // Public signup
      allow read, update, delete: if false;  // Only via admin SDK
    }
    
    // Temporary permissive rules for debugging
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
